<AnchorPane id="AnchorPane" prefHeight="523.0" prefWidth="452.0" style="-fx-background-color: #383535;" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ForgotPass.ForgetPassController">
