      <VBox layoutX="48.0" layoutY="63.0" prefHeight="389.0" prefWidth="355.0" style="-fx-background-color: #948e8e;">
         <children>
            <Label prefHeight="71.0" prefWidth="355.0" text="Enter your registered email : ">
               <font>
                  <Font name="System Bold" size="20.0" />
               </font>
               <VBox.margin>
                  <Insets left="10.0" right="10.0" />
               </VBox.margin>
            </Label>
            <TextField fx:id="email" onMouseClicked="#removeError" prefHeight="47.0" prefWidth="355.0">
               <font>
                  <Font size="20.0" />
               </font>
               <VBox.margin>
                  <Insets left="10.0" right="10.0" />
               </VBox.margin>
            </TextField>
            <HBox prefHeight="100.0" prefWidth="200.0">
               <children>
                  <TextField fx:id="message" prefHeight="48.0" prefWidth="372.0" style="-fx-background-color: #948e8e;">
                     <HBox.margin>
                        <Insets top="30.0" />
                     </HBox.margin>
                     <font>
                        <Font size="15.0" />
                     </font>
                  </TextField>
               </children>
            </HBox>
            <HBox prefHeight="51.0" prefWidth="355.0">
               <children>
                  <Button mnemonicParsing="false" onAction="#resetPass" onMouseClicked="#resetPass" prefHeight="40.0" prefWidth="130.0" text="Reset Password">
